<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CELSIUS FAHRENHEIT"
        android:id="@+id/temp_title_settings"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="20dp"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:layout_marginTop="80dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="°C       °F"
        android:id="@+id/celsius_fahrenheit"
        android:textColor="@color/white"
        android:textSize="12dp"
        android:gravity="right"
        android:paddingRight="20dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Select default setting"
            android:id="@+id/convert_temp"
            android:gravity="center_vertical|left"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="14dp" />
        <ToggleButton
            android:id="@+id/convert_temp_toggle"
            android:layout_width="120dp"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/toggle_selector"
            android:checked="false"
            android:text=""
            android:textOff=""
            android:textOn=""
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/wear_setting">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="WEAR SETTINGS"
            android:id="@+id/wear_title"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="20dp"
            android:textSize="20dp"
            android:paddingBottom="10dp"
            android:textColor="@color/white" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Select to use Analog Clock"
                android:id="@+id/analog_text"
                android:gravity="center_vertical|left"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="14dp" />

            <ToggleButton
                android:id="@+id/analog_toggle"
                android:layout_width="120dp"
                android:layout_height="fill_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/toggle_selector"
                android:checked="false"
                android:text=""
                android:textOff=""
                android:textOn=""
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/version_app"
            android:id="@+id/version_name"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white" />
    </RelativeLayout>
</LinearLayout>